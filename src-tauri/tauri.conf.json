{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "holdem",
  "version": "0.1.0",
  "identifier": "com.holdem.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "holdem",
        "width": 165,
        "height": 175,
        "dragDropEnabled": true,
        "decorations": false,
        "transparent": false,
        "focus": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/iamzubin/holdem/releases/latest/download/updater.json"
      ],
      "dialog": true,
      "pubkey": "YOUR_PUBLIC_KEY_HERE"
    }
  }
}
