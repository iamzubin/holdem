{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "holdem",
  "version": "0.1.0",
  "identifier": "com.holdem.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "holdem",
        "width": 300,
        "height": 300,
        "dragDropEnabled": true,
        "decorations": false,
        "transparent": true,
        "focus": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "theme": "Dark"
      },
      {
        "title": "popup",
        "width": 300,
        "height": 300,
        "create": false,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
